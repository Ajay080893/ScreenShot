<?xml version="1.0" encoding="utf-8"?>

<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TableRow
        android:id="@+id/result_tableRow1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >




        <TextView
            android:id="@+id/tvlvgrno"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:gravity="center"
            android:layout_weight="2"
            android:text="GR#"
            android:textColor="#000"
            android:textSize="12sp"

            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvlvbookdt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:gravity="center"
            android:text="Date"
            android:layout_weight="2"
            android:textColor="#000000"
            android:textSize="12sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/tvlvbookpkg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:gravity="center"
            android:layout_weight="1"
            android:text="Pkgs"
            android:textColor="#000000"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvlvdespkg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:gravity="center"
            android:layout_weight="3"
            android:text="Despatch Pkgs"
            android:textColor="#000000"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvlvdestnation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_column="4"
            android:gravity="center"
            android:layout_weight="2"
            android:text="Destination"
            android:textColor="#000000"
            android:textSize="12sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/tvlvConsigner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_column="5"
            android:gravity="center"
            android:layout_weight="3"
            android:text="Consigner"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="12sp" />


    </TableRow>


</TableLayout>